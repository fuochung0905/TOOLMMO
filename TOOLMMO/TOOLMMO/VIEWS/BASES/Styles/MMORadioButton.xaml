<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:TOOLMMO.VIEWS.BASES.Controls">

    <Style TargetType="{x:Type local:MMORadioButton}">
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:MMORadioButton}">
                    <!-- Border chứa toàn bộ nội dung -->
                    <Border x:Name="MainBorder"
                            BorderBrush="#CCCCCC"
                            BorderThickness="1"
                            CornerRadius="4"
                            Padding="10"
                            Background="White">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <!-- Ô vuông checkbox -->
                            <Grid Width="20" Height="20" Margin="0,0,10,0">
                                <!-- Viền checkbox -->
                                <Rectangle x:Name="CheckBoxBorder"
                                           Stroke="#999999"
                                           StrokeThickness="1"
                                           Fill="White"
                                           RadiusX="2" RadiusY="2"/>

                                <!-- Dấu tích -->
                                <Path x:Name="CheckMark"
                                      Data="M 3 8 L 7 12 L 17 2"
                                      Stroke="#2196F3"
                                      StrokeThickness="2"
                                      Visibility="Collapsed"
                                      Stretch="Uniform"/>
                            </Grid>

                            <!-- Nội dung text -->
                            <ContentPresenter VerticalAlignment="Center"
                                              RecognizesAccessKey="True"/>
                        </StackPanel>
                    </Border>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="CheckMark" Property="Visibility" Value="Visible"/>
                            <Setter TargetName="MainBorder" Property="BorderBrush" Value="#2196F3"/>
                            <Setter TargetName="MainBorder" Property="Background" Value="#E3F2FD"/>
                            <Setter TargetName="CheckBoxBorder" Property="Stroke" Value="#2196F3"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="MainBorder" Property="BorderBrush" Value="#999999"/>
                            <Setter TargetName="MainBorder" Property="Background" Value="#F5F5F5"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.6"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>