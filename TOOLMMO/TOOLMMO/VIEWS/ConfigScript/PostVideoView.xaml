<UserControl x:Class="TOOLMMO.VIEWS.ConfigScript.PostVideoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TOOLMMO.VIEWS.ConfigScript"
             xmlns:c="clr-namespace:TOOLMMO.VIEWS.BASES.Controls"
             mc:Ignorable="d" 
             Width="400"
             Background="White">
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="10">
                <local:BaseScriptView />
                <Border  BorderBrush="LightGray" BorderThickness="1" CornerRadius="4">
                    <StackPanel>
                        <Label Content="ĐĂNG VIDEO HÀNG LOẠT" FontSize="15" FontWeight="Bold" Padding="5,5,5,0"/>
                        <StackPanel Margin="5">
                            <c:MMOTextBox Width="300"
                            Height="60"
                            Label="Thư mục chứa video(s)"
                            Text="{Binding TextValue, UpdateSourceTrigger=PropertyChanged}" />
                            <c:MMONumericUpDown 
                            Width="300"
                            Height="50"
                            Label="Nội dung video"
                            FontWeight="Bold"
                            Value="{Binding ContenVideo, Mode=TwoWay}" />

                            <ItemsControl ItemsSource="{Binding VideoFolders}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <c:MMOTextBox Width="300"
                                          Height="60"
                                          Label="Thư mục chứa video(s)"
                                          Text="{Binding ., Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />       
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                            <c:MMOCheckBox 
                            Width="300"
                            Height="50"                       
                            Content="Xóa video đăng thành công"
                            IsChecked="{Binding IsRelayScript}"/>
                        </StackPanel>
                        <c:MMOButton Content="Chọn User"
                        Height="50"
                        FontWeight="Bold"
                        Foreground="White"
                        Background="#F57C00"
                        BorderThickness="0"
                        Cursor="Hand"
                        Command="{Binding NavigateToSelectUserCommand}"  />
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
