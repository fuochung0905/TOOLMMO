<UserControl x:Class="TOOLMMO.VIEWS.ConfigSystem.ConfigSystemView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TOOLMMO.VIEWS.ConfigSystem"
               xmlns:c= "clr-namespace:TOOLMMO.VIEWS.BASES.Controls"
               xmlns:converters="clr-namespace:TOOLMMO.COMMON"
               xmlns:viewmodels="clr-namespace:TOOLMMO.VIEWMODELS"
               d:DataContext="{d:DesignInstance Type=viewmodels:ConfigSystemViewModel}"
               mc:Ignorable="d"
               Height="600" Width="400">
    <UserControl.Resources>
        <converters:EqualsEnumConverter x:Key="EnumEqualsConverter"/>
    </UserControl.Resources>
    <Grid Background="White">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <Border Margin="10" CornerRadius="15" BorderBrush="LightGray" BorderThickness="1" Panel.ZIndex="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <DockPanel Grid.Row="0">
                        <Border Background="#1E88E5" Padding="10" DockPanel.Dock="Top" CornerRadius="15,15,0,0">
                            <DockPanel>
                                <Button Width="30" Height="30"
                                       Background="Transparent"
                                       BorderThickness="0"
                                       Command="{Binding ToggleSidebarCommand}">
                                    <Path Data="M0,4 L24,4 M0,12 L24,12 M0,20 L24,20"
                                         Stroke="White"
                                         StrokeThickness="2"
                                         Stretch="Uniform"/>
                                </Button>
                                <TextBlock Text="Kịch bản"
                               Foreground="White"
                               FontSize="18"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               Margin="10,0,0,0"/>
                            </DockPanel>
                        </Border>

                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <StackPanel Margin="20">
                                <StackPanel.Resources>
                                    <Style TargetType="c:MMORadioButton">
                                        <Setter Property="Margin" Value="0,0,0,10"/>
                                    </Style>
                                </StackPanel.Resources>

                                <c:MMORadioButton GroupName="ScenarioGroup"
         Content="kịch bản 1"
         FontSize="30"
         FontWeight="Bold"                                                 
         VerticalContentAlignment="Center"
         IsChecked="{Binding SelectedScenario, Converter={StaticResource EnumEqualsConverter}, ConverterParameter=KichBan1}" />

                                <c:MMORadioButton GroupName="ScenarioGroup"
         Content="kịch bản 2"
         FontSize="30"
         FontWeight="Bold"
         VerticalContentAlignment="Center"
         IsChecked="{Binding SelectedScenario, Converter={StaticResource EnumEqualsConverter}, ConverterParameter=KichBan2}" />

                                <c:MMORadioButton GroupName="ScenarioGroup"
         Content="kịch bản 3"
         FontSize="30"
         FontWeight="Bold"
         VerticalContentAlignment="Center"
         IsChecked="{Binding SelectedScenario, Converter={StaticResource EnumEqualsConverter}, ConverterParameter=KichBan3}" />

                                <c:MMORadioButton GroupName="ScenarioGroup"
         Content="kịch bản 4"
         FontSize="30"
         FontWeight="Bold"
         VerticalContentAlignment="Center"
         IsChecked="{Binding SelectedScenario, Converter={StaticResource EnumEqualsConverter}, ConverterParameter=KichBan4}" Checked="MMORadioButton_Checked" />

                            </StackPanel>
                        </ScrollViewer>
                    </DockPanel>

                    <Border Grid.Row="1" Margin="20" CornerRadius="10">
                        <c:MMOButton Content="CẤU HÌNH KỊCH BẢN"
                               Height="50"
                               FontWeight="Bold"
                               Foreground="White"
                               Background="#F57C00"
                               BorderThickness="0"
                               Cursor="Hand"
                               Command="{Binding ConfigureScenarioCommand}" />
                    </Border>

                </Grid>
            </Border>
        </ScrollViewer>
    </Grid>
</UserControl>
