<UserControl x:Class="TOOLMMO.VIEWS.ConfigSystem.ConfigBaseView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TOOLMMO.VIEWS.ConfigSystem"
             xmlns:c="clr-namespace:TOOLMMO.VIEWS.BASES.Controls"
             mc:Ignorable="d" 
             Height="600" Width="400"
             Background="White">
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">
                <Border Background="#1E88E5" Padding="10" DockPanel.Dock="Top" CornerRadius="15,15,0,0">
                    <DockPanel>
                        <Button Width="30" Height="30"
                                Background="Transparent"
                                BorderThickness="0"
                                Command="{Binding ToggleSidebarCommand}">
                                <Path Data="M0,4 L24,4 M0,12 L24,12 M0,20 L24,20"
                                  Stroke="White"
                                  StrokeThickness="2"
                                  Stretch="Uniform"/>
                        </Button>
                        <TextBlock Text="Cấu hình chung"
                        Foreground="White"
                        FontSize="18"
                        FontWeight="Bold"
                        VerticalAlignment="Center"
                        Margin="10,0,0,0"/>
                    </DockPanel>
                </Border>
                <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="4" Margin="0,0,0,15">
                    <StackPanel>
                        <Label Content="Chrome setting" FontWeight="Bold" Padding="5,5,5,0"/>
                        <StackPanel Margin="5">
                            <c:MMONumericUpDown 
                                Width="300"
                                Height="50"
                                Label="Runtime account (s)"
                                FontWeight="Bold"
                                Value="{Binding RuntimeAccount, Mode=TwoWay}"/>
                            <c:MMOCheckBox 
                                Width="300"
                                Height="50"
                                FontWeight="Bold"
                                Content="Show photo while open"
                                IsChecked="{Binding IsShowPhotoWhileOpen}"/>
                            <c:MMOCheckBox 
                                Width="300"
                                Height="50"
                                FontWeight="Bold"
                                Content="Update chorme drive"
                                IsChecked="{Binding IsShowPhotoWhileOpen}"/>
                            <c:MMONumericUpDown 
                                Width="300"
                                Height="50"
                                Label="Delay open(s)"
                                FontWeight="Bold"
                                Value="{Binding DelayOpen, Mode=TwoWay}"/>
                            <c:MMONumericUpDown 
                                 Width="300"
                                 Height="50"
                                 Label="Delay close(s)"
                                 FontWeight="Bold"
                                 Value="{Binding DelayOpen, Mode=TwoWay}"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="4" Margin="0,0,0,15">
                    <StackPanel>
                        <Label Content="IP config" FontWeight="Bold" Padding="5,5,5,0"/>
                        <StackPanel Margin="5">
                            <c:MMOCheckBox 
                                 Width="300"
                                 Height="50"
                                 FontWeight="Bold"
                                 Content="Check IP before running"
                                 IsChecked="{Binding IsCheckIPBeforeRunning}"/>
                            <c:MMOCheckBox 
                                 Width="300"
                                 Height="50"
                                 FontWeight="Bold"
                                 Content="Change IP"
                                 IsChecked="{Binding IsChangeIP}"/>
                            <c:MMONumericUpDown 
                                  Width="300"
                                  Height="50"
                                  Label="Delay after change IP (s)"
                                  FontWeight="Bold"
                                  Value="{Binding DelayAfterChangeIP, Mode=TwoWay}"/>
                            <c:MMONumericUpDown 
                                  Width="300"
                                  Height="50"
                                  Label="Change IP after (iteration)"
                                  FontWeight="Bold"
                                  Value="{Binding ChangeIPAfter, Mode=TwoWay}"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
                <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="4" Margin="0,0,0,15">
                    <StackPanel>
                        <Label Content="Proxy" FontWeight="Bold" Padding="5,5,5,0"/>
                        <c:MMOTextBox Width="250"
                                Height="60"
                                Label="Key API"
                                Text="{Binding TextValue, UpdateSourceTrigger=PropertyChanged}" />
                        <c:MMONumericUpDown 
                              Width="300"
                              Height="50"
                              Label="Thread/ IP"
                              FontWeight="Bold"
                              Value="{Binding ThreadIP, Mode=TwoWay}"/>
                    </StackPanel>
                </Border>
                <c:MMOButton Content="CẤU HÌNH KỊCH BẢN"
                        Height="50"
                        FontWeight="Bold"
                        Foreground="White"
                        Background="#F57C00"
                        BorderThickness="0"
                        Cursor="Hand"
                        Command="{Binding ConfigureScenarioCommand}" /> 
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>