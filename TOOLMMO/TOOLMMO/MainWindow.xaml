<Window x:Class="TOOLMMO.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:c="clr-namespace:TOOLMMO.VIEWS.BASES.Controls"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="635" Width="420"
        SizeToContent="Manual"
        ResizeMode="NoResize">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <Storyboard x:Key="SlideInStoryboard">
            <DoubleAnimation Storyboard.TargetProperty="(Border.RenderTransform).(TranslateTransform.X)"
                         From="-250" To="0" Duration="0:0:0.3">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
        <Storyboard x:Key="SlideOutStoryboard">
            <DoubleAnimation Storyboard.TargetProperty="(Border.RenderTransform).(TranslateTransform.X)"
                         From="0" To="-250" Duration="0:0:0.3">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseIn"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
    </Window.Resources>

    <Grid Background="White">
        <ContentControl Content="{Binding CurrentPage}"/>
        <Border Name="OverlayPanel"
            Background="#80000000"
            Panel.ZIndex="1"
            Visibility="{Binding IsOverlayVisible, Converter={StaticResource BooleanToVisibilityConverter}}"
            IsHitTestVisible="True">
            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsSidebarOpen}" Value="True">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>
        </Border>
        <Border Width="250"
                Background="#F5F5F5"
                HorizontalAlignment="Left"
                Panel.ZIndex="2"
                VerticalAlignment="Stretch"
                RenderTransformOrigin="0,0">
            <Border.RenderTransform>
                <TranslateTransform X="{Binding SidebarOffset}"/>
            </Border.RenderTransform>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Button Grid.Row="0"
                HorizontalAlignment="Right" 
                Margin="10,10,10,20"
                Width="25" 
                Height="25"
                Background="Transparent"
                BorderThickness="0"
                Command="{Binding CloseSidebarCommand}">
                    <Path Data="M0,0 L20,20 M0,20 L20,0" 
                  Stroke="Gray"
                  StrokeThickness="2"/>
                </Button>

                <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto"
                      Padding="10,0,10,10">
                    <StackPanel>
                        <Border Background="Transparent" 
                                CornerRadius="4"
                                Padding="8"
                                Margin="0,0,0,5"
                                Cursor="Hand">          
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="MouseDown">
                                    <i:InvokeCommandAction Command="{Binding NavigateToConfigSystemCommand}"/>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                            <StackPanel Orientation="Horizontal">
                                <Path Data="M12,2L4,2A2,2 0 0,0 2,4L2,20A2,2 0 0,0 4,22L20,22A2,2 0 0,0 22,20L22,8L16,2Z"
                                      Fill="#555"
                                      Width="20"
                                      Height="20"
                                      Margin="0,0,10,0"/>           
                                <TextBlock Text="Cấu hình chung"
                                           VerticalAlignment="Center"
                                           Foreground="#333"/>
                            </StackPanel>
                        </Border>

                        <Border Background="Transparent" 
                        CornerRadius="4"
                        Padding="8"
                        Margin="0,0,0,5"
                        Cursor="Hand">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="MouseDown">
                                    <i:InvokeCommandAction Command="{Binding NavigateToConfigCommand}"/>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                            <StackPanel Orientation="Horizontal">
                                <Path Data="M12,3L2,12L5,12L5,20L11,20L11,14L13,14L13,20L19,20L19,12L22,12L12,3Z"
                                          Fill="#555"
                                          Width="20"
                                          Height="20"
                                          Margin="0,0,10,0"/>
                                <TextBlock Text="Trang chủ"
                                   VerticalAlignment="Center"
                                   Foreground="#333"/>
                            </StackPanel>
                        </Border>

                        <Border Background="Transparent" 
                        CornerRadius="4"
                        Padding="8"
                        Margin="0,0,0,5"
                        Cursor="Hand">
                            <StackPanel Orientation="Horizontal">
                                <Path Data="M12,15.5A3.5,3.5 0 0,1 8.5,12A3.5,3.5 0 0,1 12,8.5A3.5,3.5 0 0,1 15.5,12A3.5,3.5 0 0,1 12,15.5M19.43,12.97C19.47,12.65 19.5,12.33 19.5,12C19.5,11.67 19.47,11.34 19.43,11L21.54,9.37C21.73,9.22 21.78,8.95 21.66,8.73L19.66,5.27C19.54,5.05 19.27,4.96 19.05,5.05L16.56,6.05C16.04,5.66 15.5,5.32 14.87,5.07L14.5,2.42C14.46,2.18 14.25,2 14,2H10C9.75,2 9.54,2.18 9.5,2.42L9.13,5.07C8.5,5.32 7.96,5.66 7.44,6.05L4.95,5.05C4.73,4.96 4.46,5.05 4.34,5.27L2.34,8.73C2.21,8.95 2.27,9.22 2.46,9.37L4.57,11C4.53,11.34 4.5,11.67 4.5,12C4.5,12.33 4.53,12.65 4.57,12.97L2.46,14.63C2.27,14.78 2.21,15.05 2.34,15.27L4.34,18.73C4.46,18.95 4.73,19.03 4.95,18.95L7.44,17.94C7.96,18.34 8.5,18.68 9.13,18.93L9.5,21.58C9.54,21.82 9.75,22 10,22H14C14.25,22 14.46,21.82 14.5,21.58L14.87,18.93C15.5,18.67 16.04,18.34 16.56,17.94L19.05,18.95C19.27,19.03 19.54,18.95 19.66,18.73L21.66,15.27C21.78,15.05 21.73,14.78 21.54,14.63L19.43,12.97Z"
                                          Fill="#555"
                                          Width="20"
                                          Height="20"
                                          Margin="0,0,10,0"/>
                                <TextBlock Text="Cài đặt"
                                   VerticalAlignment="Center"
                                   Foreground="#333"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>

                <c:MMOButton Content="UPDATE TO 3.7.1"
                Grid.Row="2"
                Height="50"
                FontWeight="Bold"
                Foreground="White"
                Background="#F57C00"
                BorderThickness="0"
                Cursor="Hand"
                Margin="10 30"
                Command="{Binding ConfigureScenarioCommand}"/>
            </Grid>
        </Border>
    </Grid>
</Window>